{
    "manifest_version": 3,
    "name": "Image Alt Text Viewer",
    "version": "1.0",
    "description": "Displays alt text on images",
    "icons": {
        "16": "icon-16.png",
        "38": "icon-38.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  